<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csApiApp.Mvvm.View.GameDetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding DealResult.ThumbnailLink}" Aspect="AspectFit" HeightRequest="300" />
            <StackLayout Padding="15,0">
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}Title - {0}" Path="DealResult.Title" />
                    </Label.Text>
                </Label>
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}GameID - {0}" Path="DealResult.GameID" />
                    </Label.Text>
                </Label>
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}Normal Price - £{0}" Path="DealResult.NormalPrice" />
                    </Label.Text>
                </Label>
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}Sale Price - £{0}" Path="DealResult.SalePrice" />
                    </Label.Text>
                </Label>
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}Savings - {0}%" Path="DealResult.SavingsPercentage" />
                    </Label.Text>
                </Label>
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}Release - {0}" Path="DealResult.ReleaseDate" />
                    </Label.Text>
                </Label>
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}Steam Rating - {0}" Path="DealResult.SteamRatingPercent" />
                    </Label.Text>
                </Label>
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}Steam AppID - {0}" Path="DealResult.SteamAppID" />
                    </Label.Text>
                </Label>
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}Meta Score - {0}" Path="DealResult.MetaReviewScore" />
                    </Label.Text>
                </Label>
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}Meta Review Link - {0}" Path="DealResult.MetaReviewLink" />
                    </Label.Text>
                </Label>
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}Store ID - {0}" Path="DealResult.StoreID" />
                    </Label.Text>
                </Label>
                <Label>
                    <Label.Text>
                        <Binding StringFormat="{}Deal ID - {0}" Path="DealResult.DealID" />
                    </Label.Text>
                </Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>