<?xml version="1.0" encoding="utf-8" ?>
<view:BasePage
             xmlns:view="clr-namespace:csApiApp.Mvvm.View"
            xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csApiApp.Mvvm.View.Settings">
    <view:BasePage.Content>
        <StackLayout>
            <Label Text="Settings" HorizontalOptions="CenterAndExpand" FontSize="40" Margin="5" />
            <Grid Padding="20, 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Grid.Row="0"
                       Text="Change Theme"
                       FontSize="26"></Label>
                <Button Grid.Column="1"
                        Grid.Row="0"
                        Clicked="OnClick_Change"
                        Text="Change"
                        FontSize="26"
                        TextTransform="None"></Button>
            </Grid>
        </StackLayout>
    </view:BasePage.Content>
</view:BasePage>