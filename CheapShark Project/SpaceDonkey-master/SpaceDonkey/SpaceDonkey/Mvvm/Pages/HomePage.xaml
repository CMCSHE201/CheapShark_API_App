<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:z="clr-namespace:FunctionZero.zBind.z;assembly=FunctionZero.zBind"
             x:Class="SpaceDonkey.Mvvm.Pages.HomePage"
             Title="Space Donkey!">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto, Auto, *, Auto">
            <Label Grid.Row="0" Text="Navigation Bar" HorizontalOptions="CenterAndExpand" />
            <SearchBar Grid.Row="1" x:Name="sb_search" HorizontalOptions="CenterAndExpand" WidthRequest="800" Placeholder="Search..." HorizontalTextAlignment="Center"/>
            <Label Grid.Row="3" x:Name="search_Result"  HorizontalOptions="CenterAndExpand" />
            <Label Grid.Row="5" Text="Deal of the Day!" HorizontalOptions="CenterAndExpand" TextColor="Red"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>